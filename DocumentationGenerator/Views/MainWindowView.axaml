<Window x:Class="DocumentationGenerator.Views.MainWindowView"
        xmlns="https://github.com/avaloniaui"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:vm="using:DocumentationGenerator.ViewModels"
        Title="EasyDocs"
        MinWidth="500"
        MinHeight="500"
        d:DesignHeight="400"
        d:DesignWidth="500"
        x:DataType="vm:MainWindowViewModel"
        ExtendClientAreaToDecorationsHint="True"
        Icon="/Assets/Doc Gen Icon.png"
        WindowStartupLocation="CenterScreen"
        mc:Ignorable="d">

    <Design.DataContext>
        <vm:MainWindowViewModel />
    </Design.DataContext>
    <Border BorderBrush="#3a3a3a" BorderThickness="1">
        <Grid ColumnDefinitions="250,*" RowDefinitions="50,*">
            <StackPanel Grid.Row="0" Grid.ColumnSpan="2" HorizontalAlignment="Left"
                        Orientation="Horizontal">
                <Image Margin="3" VerticalAlignment="Top" Source="avares://DocumentationGenerator/Assets/Doc Gen Icon Rounded Corners.png" />
                <Button x:Name="FileButton" Classes="ChromeButton" Click="OnFileButtonClicked"
                        Content="File" />
                <Button Classes="ChromeButton" Command="{Binding SettingsButtonCommand}" Content="Settings" HotKey="Ctrl+S" />
                <Button Classes="ChromeButton" Content="Help" />
            </StackPanel>

            <Popup x:Name="FilePopup" Grid.ColumnSpan="2" Focusable="True"
                   Placement="BottomEdgeAlignedLeft"
                   PlacementTarget="{Binding ElementName=FileButton}">
                <Border Classes="PopupBorder">

                        <StackPanel>
                            <Button Classes="MenuButton" Click="OnPopupButtonClick"
                                    Command="{Binding LoadFileCommand}"
                                    Content="Load File/s" HotKey="Ctrl+F" PointerEntered="OnMenuButtonPointerOver"
                                    ToolTip.Tip="Load a file(s) from a directory. HOTKEY: CTRL+F">
                            </Button>
                            <Button Classes="MenuButton" Click="OnPopupButtonClick"
                                    Command="{Binding LoadDirectoryCommand}"
                                    Content="Load Directory" HotKey="Ctrl+O" PointerEntered="OnMenuButtonPointerOver"
                                    ToolTip.Tip="Load a whole directory (inlcudes sub-directories). HOTKEY: CTRL+O" />
                            <Button x:Name="ExportButton" Classes="MenuButton" Click="OnExportButtonClicked"
                                    Content="Export      >" PointerEntered="OnMenuButtonPointerOver" ToolTip.Tip="Export data to a chosen format." />
                            <Button Classes="MenuButton" Content="Clear Docs" HotKey="Ctrl+D" Command="{Binding ClearDocsCommand}"
                                    PointerEntered="OnMenuButtonPointerOver" ToolTip.Tip="Delete all the loaded data and start over." />
                            <Separator HorizontalAlignment="Stretch" />
                            <Button Classes="MenuButton"
                                    Command="{Binding ExitAppCommand}"
                                    Content="Exit" PointerEntered="OnMenuButtonPointerOver" />
                        </StackPanel>
                </Border>
            </Popup>

            <Popup x:Name="ExportPopup" Grid.ColumnSpan="2" Placement="RightEdgeAlignedTop"
                   PlacementTarget="{Binding ElementName=ExportButton}">
                <Border Classes="PopupBorder">
                    <StackPanel>
                        <Button Classes="MenuButton" Click="OnPopupButtonClick"
                                Command="{Binding ExportPDFDocumentationCommand}"
                                Content="Export to PDF." HotKey="Ctrl+E+P" ToolTip.Tip="All data will be compiled into one PDF Document. HOTKEY: CTRL+E+P" />
                        <Button Classes="MenuButton" Click="OnPopupButtonClick"
                                Command="{Binding ExportHTMLDocumentationCommand}"
                                Content="Export to HTML." HotKey="Ctrl+E+H" ToolTip.Tip="All data will be compiled into a HTML website. HOTKEY: CTRL+E+H" />
                    </StackPanel>
                </Border>
            </Popup>


            <Label Grid.Row="1" Grid.ColumnSpan="2" Margin="10"
                   HorizontalAlignment="Left" VerticalAlignment="Top"
                   Content="{Binding FileName}"
                   FontSize="20" />

            <Label Grid.Row="1" Margin="10,50" HorizontalAlignment="Left"
                   VerticalAlignment="Top" Content="Project Name:" FontSize="20" />

            <Label Grid.Row="1" Margin="10,95" HorizontalAlignment="Left"
                   VerticalAlignment="Top" Content="Project Description:" FontSize="20" />

            <TextBox Grid.Row="1" Grid.Column="2" Height="30"
                     Margin="10,50" HorizontalAlignment="Stretch" VerticalAlignment="Top"
                     Text="{Binding ProjectName}"
                     Watermark="Enter this projects name." />

            <TextBox Grid.Row="1" Grid.Column="2" Height="30"
                     Margin="10,95" HorizontalAlignment="Stretch" VerticalAlignment="Top"
                     Text="{Binding ProjectDescription}"
                     Watermark="Describe this projects in a few short words." />

            <ScrollViewer Grid.Row="1" Grid.ColumnSpan="2" Margin="10,150,10,10">
                <TextBox HorizontalAlignment="Stretch" VerticalAlignment="Top" AcceptsReturn="True"
                         IsReadOnly="True"
                         Text="{Binding Output}"
                         TextWrapping="Wrap" Watermark="Ttype some text." />
            </ScrollViewer>
        </Grid>
    </Border>
</Window>
